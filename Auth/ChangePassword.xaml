<Window x:Class="Rental.Auth.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rental.Auth" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ChangePassword" 
         Height="457"
          Width="705"
          WindowStartupLocation="CenterScreen"
          WindowStyle="None"
          Background="Transparent"
          AllowsTransparency="True"
          ResizeMode="NoResize"
        >
    <Border Background="Transparent"
>

        <Border Background="White" BorderThickness="3" CornerRadius="10">



            <Grid>


                <Grid.RowDefinitions>

                    <RowDefinition/>

                </Grid.RowDefinitions>


                <Grid Grid.Row="0">


                    <!--Grid for column definition-->
                    <Grid.ColumnDefinitions>

                        <!--First column-->
                        <ColumnDefinition />

                        <!--Second column-->

                    </Grid.ColumnDefinitions>



            

                    <!--Grid for the column 1-->
                    <Grid Grid.Row="0" Grid.Column="0">



                        <Grid.RowDefinitions>

                            <!--Row that holds the the three columns-->
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="115*"/>
                            <RowDefinition Height="300*"/>

                        </Grid.RowDefinitions>

                        <!--Border for the row 1-->
                        <Border BorderBrush="Black" Grid.Row="0">



                        </Border>


                        <Grid>


                            <Grid.ColumnDefinitions>


                                <!--Minimize button column-->
                                <ColumnDefinition/>

                                <ColumnDefinition Width="30"/>

                                <!--Maximize button column-->
                                <ColumnDefinition Width="30"/>

                                <!--Close button column-->
                                <ColumnDefinition Width="30"/>

                            </Grid.ColumnDefinitions>


                            <!--Minimize button -->
                            <Button x:Name="MinimizeBtn"
                                  Style="{StaticResource MinimizeButtonStyle}"
                                  Grid.Column="1"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,4,0"
                                  Cursor="Hand"
                                  Click="MinimizeBtn_Click">

                                <Icon:PackIconMaterial 
                                   Kind="Minus" 
                                   VerticalAlignment="Center"
                                   Height="10"
                                   HorizontalAlignment="Right"
                                   Width="16"
                                 />

                            </Button>


                            <!--Maximize button-->
                            <Button x:Name="MaximizeBtn"
                                Style="{StaticResource MinimizeButtonStyle}"
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                Margin="0,0,4,0"
                                Cursor="Hand"
                                Click="MaximizeBtn_Click">


                                <Icon:PackIconMaterial 
                                     Kind="WindowMaximize" 
                                     VerticalAlignment="Center"
                                     Height="10"
                                     HorizontalAlignment="Right"
                                     Width="16"
                                 />

                            </Button>

                            <!--Close button-->
                            <Button x:Name="CloseBtn"
                                 Style="{StaticResource MinimizeButtonStyle}"
                                 Grid.Column="3"
                                 HorizontalAlignment="Right"
                                 Margin="0,0,4,0"
                                 Cursor="Hand"
                                 Click="CloseBtn_Click">

                                <Icon:PackIconMaterial 
                                      Kind="Close" 
                                      VerticalAlignment="Center"
                                      Height="10"
                                      HorizontalAlignment="Right"
                                      Width="16"
                                  />


                            </Button>

                        </Grid>

                        <Border Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,304"    >

                            <StackPanel Orientation="Vertical">
                                <!--Title-->

                                <TextBlock Text="Change password"
                                    Grid.Row="1"
                                    FontWeight="DemiBold"
                                    FontSize="12" 
                                    Margin="0,50,0,0"
                                    HorizontalAlignment="Center"
                                    />
                                <!--Dumbbel icon-->
                                <!--Description-->


                            </StackPanel>

                        </Border>

                        <Border Grid.Row="2" HorizontalAlignment="Center" Width="350" Margin="0,4,0,0" >

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <!--Icons column-->
                                <Border Grid.Column="1" >


                                    <StackPanel Orientation="Vertical">

                                        <!--Email icon-->
                                        <Icon:PackIconMaterial 
                                             Kind="Lock"
                                             Height="16" 
                                             Margin="0,10,0,0"
                                             HorizontalAlignment="Center"
                                             Width="36" Grid.Row="1"/>


                                        <!--Email icon-->
                                        <Icon:PackIconMaterial 
                                              Kind="Lock"
                                              Height="16"
                                              Margin="0,60,0,0"
                                              HorizontalAlignment="Center"
                                              Width="38"/>

                                    </StackPanel>

                                </Border>


                                <!--Textboxes ang buttons-->
                                <Border Grid.Column="2" Margin="0,0,10,0">

                                    <StackPanel Orientation="Vertical">


                                        <!--Email textbox-->
                                        <TextBox x:Name="FirstPassword"
                                            Style="{StaticResource TextBoxes}" 
                                            MaxLength="20"
                                            PreviewKeyDown="FirstPassword_PreviewKeyDown"
                                            BorderBrush="#727272"
                                             TextChanged="FirstPassword_TextChanged"
                                            
                                            />



                                        <!--OTP textbox-->
                                        <TextBox x:Name="ConfirmPassword"
                                            Style="{StaticResource TextBoxes}" 
                                            MaxLength="20"
                                            Margin="0,50,0,0"
                                            PreviewKeyDown="ConfirmPassword_PreviewKeyDown"
                                            BorderBrush="#727272"
                                            />

                                        <!--Login button-->

                                        <Button x:Name="ChangepassWordBtn" 
                                             Style="{StaticResource SubmitButton}" 
                                             Content="Change"
                                             Width="201"
                                             Background="Blue"
                                             BorderThickness="0"
                                             Margin="0,10,0,0"
                                             Click="ChangepassWordBtn_Click"
                                             HorizontalAlignment="Left"
                                         />
                                    </StackPanel>

                                </Border>


                            </Grid>

                        </Border>




                    </Grid>
                </Grid>
            </Grid>


        </Border>

    </Border>
</Window>

<Window x:Class="Rental.Areas.Admin.Forms.Pay.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rental.Areas.Admin.Forms.Pay" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Add" 
         Height="330" 
          Width="450"
          WindowStartupLocation="CenterScreen"
          WindowStyle="None"
          AllowsTransparency="True"
        Loaded="Window_Loaded"
          Background="Transparent">
    
    
    <Border Background="#F4F5F6"
         BorderBrush="Gray"
         BorderThickness="0.5"
         CornerRadius="10"
         >

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="40"/>
                <RowDefinition Height="240"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>

            <!--Header-->
            <Border Grid.Row="0"
                 CornerRadius="9,9,0,0"
                 Background="SkyBlue"
                 >

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <!--Close button-->
                    <Button x:Name="CloseBtn"
                                    Style="{StaticResource MinimizeButtonStyle}"
                                    Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,4,0"
                                    Cursor="Hand"
                                    Click="CloseBtn_Click">


                        <Icon:PackIconMaterial 
                                         Kind="Close" 
                                         VerticalAlignment="Center"
                                         Height="10"
                                         HorizontalAlignment="Right"
                                         Width="16"
                                     />

                    </Button>
                </Grid>

            </Border>


            <!--Content-->
            <Border Grid.Row="1"
                 Background="White"
                 Margin="10"
                 CornerRadius="5"
                 >
                <StackPanel Orientation="Vertical">
                    <!--Client name-->
                    <Label Content="Tenant name"/>
                    <TextBox x:Name="TenantName" Style="{StaticResource TextBoxes}"
                          MaxLength="30"
                          IsEnabled="False"
                          />

                    <!--PaymentType-->
                    <Label Content="PropertyName"/>
                    <TextBox x:Name="PropertyName" Style="{StaticResource TextBoxes}"
                    MaxLength="20" IsEnabled="False"
                    />


                    <!--PlanName-->
                    <Label Content="Suggested amount to pay base on the current balance or monthly rent:"/>
                    <TextBox x:Name="Amount" Style="{StaticResource TextBoxes}"
                       MaxLength="7" 
                         PreviewTextInput="Amount_PreviewTextInput"
                         PreviewKeyDown="Amount_PreviewKeyDown"
                        TextChanged="Amount_TextChanged"
                             IsEnabled="True"
                       />
                    <Label Content="Balance"/>
                    <TextBox x:Name="Balance" Style="{StaticResource TextBoxes}"
                       MaxLength="7"                    
                       IsEnabled="False"
                       />

                    <!--Client name-->



                </StackPanel>




            </Border>

            <!--Footer-->
            <Border Grid.Row="3"
                 CornerRadius="0,0,9,9"
                 BorderBrush="Gray"
                 Background="White"
                 BorderThickness="0.5"
                 >
                <Button x:Name="Submit" Grid.Column="1" 
                   Style="{StaticResource SubmitButton}" 
                   Content="Pay"
                   Cursor="Hand"
                   Background="Blue"
                   Click="Submit_Click"
                   BorderThickness="0" 
                   HorizontalAlignment="Center" Margin="0,12,0,12" Width="278" 
               />

            </Border>
        </Grid>

    </Border>
</Window>

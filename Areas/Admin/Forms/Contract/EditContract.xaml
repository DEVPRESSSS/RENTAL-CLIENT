<Window x:Class="Rental.Areas.Admin.Forms.Contract.EditContract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rental.Areas.Admin.Forms.Contract" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="EditContract"     
        Height="500" 
        Width="340"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Background="Transparent">
    
    
    
    <Border Background="#F4F5F6"
      BorderBrush="Gray"
      BorderThickness="0.5"
      CornerRadius="10"
      >

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="40"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>

            <!--Header-->
            <Border Grid.Row="0"
              CornerRadius="9,9,0,0"
              Background="SkyBlue"
              >

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <!--Close button-->
                    <Button x:Name="CloseBtn"
                         Style="{StaticResource MinimizeButtonStyle}"
                         Grid.Column="2"
                         HorizontalAlignment="Right"
                         Margin="0,0,4,0"
                         Cursor="Hand"
                         Click="CloseBtn_Click">


                        <Icon:PackIconMaterial 
                              Kind="Close" 
                              VerticalAlignment="Center"
                              Height="10"
                              HorizontalAlignment="Right"
                              Width="16"
                          />

                    </Button>
                </Grid>

            </Border>


            <!--Content-->
            <Border Grid.Row="1"
              Background="White"
              Margin="10"
              CornerRadius="5"
              >
                <StackPanel Orientation="Vertical">


                    <!--Type-->
                    <Label Content="Property Name "/>
                    <ComboBox x:Name="PropertyName" Height="30" SelectionChanged="PropertyName_SelectionChanged" SelectedValuePath="Content">

                    </ComboBox>

                    <!--Type-->
                    <Label Content="Tenant Name"/>
                    <ComboBox x:Name="TenantName" Height="30" SelectedValuePath="Content">

                    </ComboBox>


                    <!--Start Date-->
                    <Label Content="Start Date"/>
                    <DatePicker x:Name="StartDate"
                         Height="30"
                         SelectedDateFormat="Short"
                          >
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <!--End Date-->
                    <Label Content="End Date"/>
                    <DatePicker x:Name="EndDate"
                         Height="30"
                         SelectedDateFormat="Short"
                          >
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>


                    <!--MonthlyRent -->
                    <Label Content="MonthlyRent "/>
                    <TextBox x:Name="MonthlyRent" Style="{StaticResource TextBoxes}"
                      MaxLength="6"
                      IsReadOnly="True"
                      PreviewTextInput="MonthlyRent_PreviewTextInput"
                      PreviewKeyDown="MonthlyRent_PreviewKeyDown"
             />


                    <!--Status-->
                    <Label Content="Status"/>
                    <ComboBox x:Name="Status" Height="30" SelectedValuePath="Content" SelectionChanged="Status_SelectionChanged">
                        <ComboBoxItem Content="Active"/>
                        <ComboBoxItem Content="Inactive"/>
                        <ComboBoxItem Content="Terminated"/>
                    </ComboBox>


                    <!--MonthlyRent -->
                    <Label Content="Deposit"/>
                    <TextBox x:Name="Deposit" Style="{StaticResource TextBoxes}"
                   MaxLength="6"
                   PreviewTextInput="Deposit_PreviewTextInput"
                   PreviewKeyDown="Deposit_PreviewKeyDown"
              />




                </StackPanel>




            </Border>

            <!--Footer-->
            <Border Grid.Row="3"
              CornerRadius="0,0,9,9"
              BorderBrush="Gray"
              Background="White"
              BorderThickness="0.5"
          >
                <Button x:Name="Submit" Grid.Column="1" 
                    Style="{StaticResource SubmitButton}" 
                    Content="Submit"
                    Cursor="Hand"
                    Background="Blue"
                    Click="Submit_Click"
                    BorderThickness="0" 
                    HorizontalAlignment="Center" Margin="0,12,0,12" Width="278" 
                />

            </Border>
        </Grid>

    </Border>
</Window>

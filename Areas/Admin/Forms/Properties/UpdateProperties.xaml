<Window x:Class="Rental.Areas.Admin.Forms.Properties.UpdateProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rental.Areas.Admin.Forms.Properties" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="UpdateProperties"        
        Height="520" 
        Width="340"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        
        >
   
    
    <Border Background="#F4F5F6"
          BorderBrush="Gray"
          BorderThickness="0.5"
          CornerRadius="10"
          >

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="40"/>
                <RowDefinition Height="420"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>

            <!--Header-->
            <Border Grid.Row="0"
              CornerRadius="9,9,0,0"
              Background="SkyBlue"
              >

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <!--Close button-->
                    <Button x:Name="CloseBtn"
                             Style="{StaticResource MinimizeButtonStyle}"
                             Grid.Column="2"
                             HorizontalAlignment="Right"
                             Margin="0,0,4,0"
                             Cursor="Hand"
                             Click="CloseBtn_Click">


                        <Icon:PackIconMaterial 
                                  Kind="Close" 
                                  VerticalAlignment="Center"
                                  Height="10"
                                  HorizontalAlignment="Right"
                                  Width="16"
                              />

                    </Button>
                </Grid>

            </Border>


            <!--Content-->
            <Border Grid.Row="1"
          Background="White"
          Margin="10"
          CornerRadius="5"
          >
                <StackPanel Orientation="Vertical">
                    <!-- Image of the property -->
                    <Image Name="PropertyImage" 
                        Width="100" 
                        Height="100"
                        Stretch="Fill"
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">

                    </Image>

                    <Button x:Name="ChooseFilBtn" Click="ChooseFilBtn_Click" Content="Choose file" Height="25">

                    </Button>
                    <!--PropertyName -->
                    <Label Content="PropertyName "/>
                    <TextBox x:Name="PropertyName" Style="{StaticResource TextBoxes}"
                       MaxLength="30"
                       PreviewKeyDown="PropertyName_PreviewKeyDown"
                       PreviewTextInput="PropertyName_PreviewTextInput"
                   />

                    <!--Type-->
                    <Label Content="Type "/>
                    <ComboBox x:Name="Type" Height="30" SelectedValuePath="Content">
                        <ComboBoxItem Content="Room"/>
                        <ComboBoxItem Content="Garage"/>
                    </ComboBox>



                    <!--MonthlyRent -->
                    <Label Content="MonthlyRent "/>
                    <TextBox x:Name="MonthlyRent" Style="{StaticResource TextBoxes}"
                          MaxLength="6"
                          PreviewTextInput="MonthlyRent_PreviewTextInput"
                          PreviewKeyDown="MonthlyRent_PreviewKeyDown"
                 />


                    <!--Status-->
                    <Label Content="Status"/>
                    <ComboBox x:Name="Status" Height="30" SelectedValuePath="Content">
                        <ComboBoxItem Content="Available"/>
                        <ComboBoxItem Content="Occupied"/>
                    </ComboBox>


                    <!--MonthlyRent -->
                    <Label Content="Description "/>
                    <TextBox x:Name="Description" Style="{StaticResource TextBoxes}"
                       MaxLength="40"
                       PreviewTextInput="Description_PreviewTextInput"
                       PreviewKeyDown="Description_PreviewKeyDown"
                  />




                </StackPanel>




            </Border>

            <!--Footer-->
            <Border Grid.Row="3"
              CornerRadius="0,0,9,9"
              BorderBrush="Gray"
              Background="White"
              BorderThickness="0.5"
          >
                <Button x:Name="Submit" Grid.Column="1" 
                Style="{StaticResource SubmitButton}" 
                Content="Submit"
                Cursor="Hand"
                Background="Blue"
                Click="Submit_Click"
                BorderThickness="0" 
                HorizontalAlignment="Center" Margin="0,12,0,12" Width="278" 
            />

            </Border>
        </Grid>

    </Border>

</Window>

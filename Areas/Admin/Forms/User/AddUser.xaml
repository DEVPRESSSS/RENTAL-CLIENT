<Window x:Class="Rental.Areas.Admin.Forms.User.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rental.Areas.Admin.Forms.User" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="AddUser"  WindowStartupLocation="CenterScreen"
         WindowStyle="None"
         AllowsTransparency="True"
         Background="Transparent"
        Height="450" 
        Width="300">
    
    
    
    <Border Background="#F4F5F6"
        BorderBrush="Gray"
        BorderThickness="0.5"
        CornerRadius="10"
        >

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="40"/>
                <RowDefinition Height="360"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>

            <!--Header-->
            <Border Grid.Row="0"
                CornerRadius="9,9,0,0"
                Background="SkyBlue"
                >

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <!--Close button-->
                    <Button x:Name="CloseBtn"
                                   Style="{StaticResource MinimizeButtonStyle}"
                                   Grid.Column="2"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,4,0"
                                   Cursor="Hand"
                                   Click="CloseBtn_Click">


                        <Icon:PackIconMaterial 
                                        Kind="Close" 
                                        VerticalAlignment="Center"
                                        Height="10"
                                        HorizontalAlignment="Right"
                                        Width="16"
                                    />

                    </Button>
                </Grid>

            </Border>


            <!--Content-->
            <Border Grid.Row="1"
                Background="White"
                Margin="10"
                CornerRadius="5"
                >
                <StackPanel Orientation="Vertical">
                    <!--Client name-->
                    <Label Content=" Fullname"/>
                    <TextBox x:Name="UserFullname" Style="{StaticResource TextBoxes}"
                         MaxLength="30"
                         PreviewKeyDown="UserFullname_PreviewKeyDown"
                         PreviewTextInput="UserFullname_PreviewTextInput"
                         />

                    <!--PaymentType-->
                    <Label Content="Contact"/>
                    <TextBox x:Name="Contact" Style="{StaticResource TextBoxes}"
                       MaxLength="11"
                       PreviewKeyDown="Contact_PreviewKeyDown"
                       PreviewTextInput="Contact_PreviewTextInput"
                   />


                    <!--Client name-->
                    <Label Content="Email"/>
                    <TextBox x:Name="Email" Style="{StaticResource TextBoxes}"
                      MaxLength="40"
                      PreviewKeyDown="Email_PreviewKeyDown"
                      PreviewTextInput="Email_PreviewTextInput"
                     />

                    <!--Client name-->
                    <Label Content="Username"/>
                    <TextBox x:Name="Username" Style="{StaticResource TextBoxes}"
                        MaxLength="25"
                        PreviewKeyDown="Username_PreviewKeyDown"
                        PreviewTextInput="Username_PreviewTextInput"
                       />

                    <Label Content="Password"/>
                    <TextBox x:Name="PasswordInput" Style="{StaticResource TextBoxes}"
                       MaxLength="20"
                       PreviewKeyDown="PasswordInput_PreviewKeyDown"
                       PreviewTextInput="PasswordInput_PreviewTextInput"
                      />


                </StackPanel>




            </Border>

            <!--Footer-->
            <Border Grid.Row="3"
                CornerRadius="0,0,9,9"
                BorderBrush="Gray"
                Background="White"
                BorderThickness="0.5"
                >
                <Button x:Name="Submit" Grid.Column="1" 
                  Style="{StaticResource SubmitButton}" 
                  Content="Submit"
                  Cursor="Hand"
                  Background="Blue"
                  Click="Submit_Click"
                  BorderThickness="0" 
                  HorizontalAlignment="Center" Margin="0,12,0,12" Width="278" 
              />

            </Border>
        </Grid>

    </Border>
</Window>
